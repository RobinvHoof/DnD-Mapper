@model DnD_Mapper___v2.Models.CreateCampaignModel;

@inject BLL.CampaignManager campaignManager
@{
    ViewData["Title"] = "New Campaign";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/campaign.css">
}

<div class="parent">
    <div class="div1">
        <div class="align-middle">
            <div class="text-center">
                <h1 class="header-text">New Campaign</h1>
            </div>
            <hr class="width-var" />

            <span class="row field-row">@ViewBag.CreateResult</span>
            <form asp-action="Create">
                <div class="row field-row">
                    <span asp-validation-for="Name" class=""></span><br />
                    <input asp-for="Name" placeholder="Campaign Name" autocomplete="off" class="form-control default-textfield">
                </div>                
                <div class="row field-row top-space justify-content-center">
                    <input type="submit" class="btn button-default width50 top8" value="Create Campaign">
                </div>
            </form>
        </div>
    </div>
</div>