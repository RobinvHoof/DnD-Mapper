@model DnD_Mapper___v2.Models.CampaignModel

@{
    Layout = "./_CampaignLayout";
    ViewData["Title"] = Model.Name + " - Details";
}

@section NavbarItems {
    <li class="nav-item">
        <span class="nav-link" style="color:#F4F4F9 !important">></span>
    </li>
    <li class="nav-item">
        <div class="">@Html.ActionLink("Campaign Details", "CampaignDetails", "Campaign", new { campaignID = Model.ID }, new { @class = "nav-link nav-text" })</div>
    </li>
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/campaign.css">
}

<div class="parent">
    <div class="div1">
        <div class="align-middle">
            <div class="text-center">
                <h1 class="header-text">Campaign Details</h1>
            </div>
            <hr class="width-var" />

            <span class="row field-row">@ViewBag.CreateResult</span>
            <form asp-action="CampaignDetails" enctype="multipart/form-data">
                <div hidden>
                    <input asp-for="ID" value="@Model.ID" />
                </div>
                <div class="row field-row">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "" }) <hr />
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "" })
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control default-textfield", @type = "text" } })
                </div>
                <div class="row field-row">
                    @Html.LabelFor(model => model.Map, htmlAttributes: new { @class = "" }) <hr />
                    @Html.ValidationMessageFor(model => model.Map, "", new { @class = "" })                    
                    <br />
                    <input type="file" id="Map" name="Map" accept="image/*" class="form-control default-textfield"/>
                </div>

                <div class="row field-row top-space justify-content-center">
                    <div class="col">
                        <input type="submit" class="btn button-default width100 top8" value="Confirm Changes">
                    </div>
                    <div class="col">
                        <input class="btn button-default red-button width100 top8" type="button" value="Cancel" onclick="location.href='@Url.Action("Index", "Campaign", new { campaignID = Model.ID, DMMode = true })'" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
