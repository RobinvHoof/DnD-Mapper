@inject BLL.UserManager userManager

<ul class="navbar-nav">
   @if (Context.Request.Cookies["user_id"] == null)
    {
        <li class="nav-item">
            <a class="nav-link nav-text" asp-area="" asp-controller="Identity" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link nav-text" asp-area="" asp-controller="Identity" asp-action="Login">Login</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link nav-text" asp-area="" asp-controller="Campaign" asp-action="List">Welcome @userManager.GetUser(Convert.ToInt32(Context.Request.Cookies["user_id"])).Username</a>
        </li>
        <li class="nav-item">
            <a class="nav-link nav-text" asp-area="" asp-controller="Identity" asp-action="Logout">Log out</a>
        </li>
    }

</ul>


