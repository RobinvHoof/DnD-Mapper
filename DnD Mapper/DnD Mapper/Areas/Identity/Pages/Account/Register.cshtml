@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="vertical-center horizotal-center max-static-width">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h4>Create a new account.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="text" asp-for="Input.Username" class="form-control text-field-default max-static-width" placeholder="Username" autocomplete="off" />
        </div>
        <div class="form-group">
            <input type="email" asp-for="Input.Email" class="form-control text-field-default max-static-width" placeholder="your@email.com" autocomplete="off" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <br>
        <div class="form-group">
            <input type="password" asp-for="Input.Password" class="form-control text-field-default max-static-width" placeholder="Password" autocomplete="off" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="password" asp-for="Input.ConfirmPassword" class="form-control text-field-default max-static-width" placeholder="Confirm Password" autocomplete="off" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn button-default">Register</button>
    </form>
    </div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
